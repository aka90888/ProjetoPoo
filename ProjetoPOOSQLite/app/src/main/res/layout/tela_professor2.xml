<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_professor2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mateus.correia.projetopoosqlite.TelaProfessor2"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:text="Bem Vindo !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:text="nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/professorNome"
        android:gravity="center"/>

    <TextView
        android:text="matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/professorMatricula"
        android:gravity="center"/>

    <TextView
        android:text="disciplina 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/professorDisc1"
        android:gravity="center"/>

    <TextView
        android:text="disciplina 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/professorDisc2"
        android:gravity="center"/>

    <Button
        android:text="Listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professorListar" />

    <Button
        android:text="Alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professorAlterar" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/professorVoltar"
        android:layout_weight="0.01" />

</LinearLayout>
