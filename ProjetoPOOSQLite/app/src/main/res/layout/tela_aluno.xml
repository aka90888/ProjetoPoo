<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_aluno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mateus.correia.projetopoosqlite.TelaAluno"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:text="Bem Vindo !"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:text="nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoNome"
        android:gravity="center"/>

    <TextView
        android:text="matricula"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoMatricula"
        android:gravity="center"/>

    <TextView
        android:text="curso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoCurso"
        android:gravity="center"/>

    <TextView
        android:text="disciplina 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoDisc1"
        android:gravity="center"/>

    <TextView
        android:text="Falta(s):"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"/>

    <TextView
        android:text="falta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoFalta1"
        android:gravity="center"/>

    <TextView
        android:text="Nota:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:gravity="center"/>

    <TextView
        android:text="nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoNota1"
        android:gravity="center"/>

    <TextView
        android:text="disciplina 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoDisc2"
        android:gravity="center"/>

    <TextView
        android:text="Falta(s):"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview99"
        android:gravity="center"/>

    <TextView
        android:text="falta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoFalta2"
        android:gravity="center"/>

    <TextView
        android:text="Nota:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:gravity="center"/>

    <TextView
        android:text="nota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alunoNota2"
        android:gravity="center"/>

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alunoVoltar" />

</LinearLayout>
